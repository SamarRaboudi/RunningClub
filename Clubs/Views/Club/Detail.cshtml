@model Club


<div class="album py-5" style="  background-color: #F6F6ED">
    <div class="container">
        <h1 class="details-title">@Model.Title</h1>
        <div class="race-details">
            <div class="left-section">
                <img src="@Model.Image" alt="@Model.Title" class="race-image" />
            </div>
            <div class="right-section">
                <p class="description">@Model.Description</p>
                <p class="category">Category: @Model.ClubCategory</p>
                <div class="address">
                    @*<i class="bi bi-geo-alt"></i>*@
                    <p>Address: @Model.Address.Street, @Model.Address.City, @Model.Address.State</p>
                </div>
                <div class="btn-div"> 
                    <button class="btn join-btn">Join Now</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .details-title {
        margin: 30px 0 30px;
        font-weight: bold;
        color: #0c0c0c;
    }

    .race-details {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .left-section {
        flex: 1;
    }

    .right-section {
        flex: 1;
       padding: 1rem;
    }

    .race-image {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .description {
        font-size: 16px;
        margin-bottom: 20px;
    }

    .address {
        color: #0c0c0c;
        font-weight: bold;
    }

    .category {
        font-weight: bold;
        color: #0c0c0c;
        margin-top: 20px;
    }

    .bi-geo-alt {
        margin-right: 5px;
        color: #000;
    }

    .join-btn {
        background-color: #0c0c0c;
        color: #cef400;
        font-weight: 1.1rem;
        margin-top: 50px; 
        padding:10px 15px;
    }

    .btn-div{
        text-align:end;
    }

    .join-btn:hover {
        color: #fff;
        background-color: #0c0c0c;
    }
</style>
